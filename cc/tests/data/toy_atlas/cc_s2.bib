 title = {{Galaxy evolution in cosmological simulations with outflows ― I. Stellar masses and star formation rates}},
 url = {https://www.semanticscholar.org/paper/54f2ce8353ba4dd41d9c61b52b6f214e88f5980a},
 volume = {415},
